@using ShoppingSite_FrontEnd.Site.Models.ViewModels;

@model ShoppingSite_FrontEnd.Site.Models.ViewModels.SliderVM

@{
  ViewBag.Title = "Home Page";
}

<style>
  .header_text {
    color: red;
  }

  .popupBg {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    display: none;
  }

  .popup {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
  }

  .popup_closeBtn {
    position: absolute;
    top: 5%;
    right: 2%;
    color: black;
    font-weight: bold;
    font-size: 40px;
  }
</style>

<section class="homepage-slider" id="home-slider">
  <div class="flexslider">
    <ul class="slides">
      <li>
        <img src="~/Assest/happyNewYear.jpg" alt="" />
      </li>
      <li>
        <img src="~/Assest/banner-2.jpg" alt="" />
        <div class="intro">
          <h1>2022新春優惠</h1>
          <p><span>全館商品打8折!</span></p>
          <p><span>滿千再送限量精美小禮物</span></p>
        </div>
      </li>
    </ul>
  </div>
</section>
<section class="header_text">
  <marquee>2022新春優惠，全館商品打8折，滿五百免運費運送到府，滿一千再贈精美小禮物，禮物數量有限，要搶要快!</marquee>
</section>
<section class="main-content">
  <div class="row">
    <div class="span12">
      <div class="row">
        <div class="span12">
          <h4 class="title">
            <span class="pull-left"><span class="text"><span class="line">熱門 <strong>商品</strong></span></span></span>
            <span class="pull-right">
              <a class="left button" href="#myCarousel" data-slide="prev"></a><a class="right button" href="#myCarousel" data-slide="next"></a>
            </span>
          </h4>
          <div id="myCarousel" class="myCarousel carousel slide">
            <div class="carousel-inner">
              <div class="active item">
                <ul class="thumbnails">
                  @{List<HotProductVM> hotProductsList = new List<HotProductVM>();}
                  @{int times = 1;}
                  @foreach (var item in Model.HotProductsData)
                  {
                    if (times <= 4)
                    {
                      <li class="span3">
                        <div class="product-box">
                          <span class="sale_tag"></span>
                          <p><img src="~/Assest/ProductImage.jpg" alt="" /></p>
                          <a href="product_detail.html" class="title">@Html.DisplayFor(modelItem => item.Name)</a><br />
                          <a href="products.html" class="category">@Html.DisplayFor(modelItem => item.Category)</a>
                          <p class="price">$@Html.DisplayFor(modelItem => item.Price)</p>
                        </div>
                      </li>

                      times += 1;
                    }
                    else
                    {
                      hotProductsList.Add(item);
                    }
                  }
                </ul>
              </div>
              <div class="item">
                <ul class="thumbnails">
                  @foreach (var item in hotProductsList)
                  {
                    <li class="span3">
                      <div class="product-box">
                        <p><img src="~/Assest/ProductImage.jpg" alt="" /></p>
                        <a href="product_detail.html" class="title">@Html.DisplayFor(modelItem => item.Name)</a><br />
                        <a href="products.html" class="category">@Html.DisplayFor(modelItem => item.Category)</a>
                        <p class="price">$@Html.DisplayFor(modelItem => item.Price)</p>
                      </div>
                    </li>
                  }
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br />
      <div class="row">
        <div class="span12">
          <h4 class="title">
            <span class="pull-left"><span class="text"><span class="line">最新 <strong>商品</strong></span></span></span>
            <span class="pull-right">
              <a class="left button" href="#myCarousel-2" data-slide="prev"></a><a class="right button" href="#myCarousel-2" data-slide="next"></a>
            </span>
          </h4>
          <div id="myCarousel-2" class="myCarousel carousel slide">
            <div class="carousel-inner">
              <div class="active item">
                <ul class="thumbnails">
                  @{List<ProductVM> latestProductsData = new List<ProductVM>();}
                  @{times = 1;}
                  @foreach (var item in Model.LatestProductsData)
                  {
                    if (times <= 4)
                    {
                      <li class="span3">
                        <div class="product-box">
                          <span class="sale_tag"></span>
                          <p><a href="product_detail.html"><img src="~/Assest/ProductImage.jpg" alt="" /></a></p>
                          <a href="product_detail.html" class="title">@Html.DisplayFor(modelItem => item.Name)</a><br />
                          <a href="products.html" class="category">@Html.DisplayFor(modelItem => item.Category)</a>
                          <p class="price">$@Html.DisplayFor(modelItem => item.Price)</p>
                        </div>
                      </li>

                      times += 1;
                    }
                    else
                    {
                      latestProductsData.Add(item);
                    }
                  }
                </ul>
              </div>
              <div class="item">
                <ul class="thumbnails">
                  @foreach (var item in latestProductsData)
                  {
                    <li class="span3">
                      <div class="product-box">
                        <p><a href="product_detail.html"><img src="~/Assest/ProductImage.jpg" alt="" /></a></p>
                        <a href="product_detail.html" class="title">@Html.DisplayFor(modelItem => item.Name)</a><br />
                        <a href="products.html" class="category">@Html.DisplayFor(modelItem => item.Category)</a>
                        <p class="price">$@Html.DisplayFor(modelItem => item.Price)</p>
                      </div>
                    </li>
                  }
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row feature_box">
        <div class="span4">
          <div class="service">
            <div class="responsive">
              <img src="/Assest/feature_img_2.png" alt="" />
              <h4>MODERN <strong>DESIGN</strong></h4>
              <p>Lorem Ipsum is simply dummy text of the printing and printing industry unknown printer.</p>
            </div>
          </div>
        </div>
        <div class="span4">
          <div class="service">
            <div class="customize">
              <img src="/Assest/feature_img_1.png" alt="" />
              <h4>FREE <strong>SHIPPING</strong></h4>
              <p>Lorem Ipsum is simply dummy text of the printing and printing industry unknown printer.</p>
            </div>
          </div>
        </div>
        <div class="span4">
          <div class="service">
            <div class="support">
              <img src="/Assest/feature_img_3.png" alt="" />
              <h4>24/7 LIVE <strong>SUPPORT</strong></h4>
              <p>Lorem Ipsum is simply dummy text of the printing and printing industry unknown printer.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="our_client">
  <h4 class="title"><span class="text">Manufactures</span></h4>
  <div class="row">
    <div class="span2">
      <a href="#"><img alt="" src="/Assest/14.png"></a>
    </div>
    <div class="span2">
      <a href="#"><img alt="" src="/Assest/35.png"></a>
    </div>
    <div class="span2">
      <a href="#"><img alt="" src="/Assest/1.png"></a>
    </div>
    <div class="span2">
      <a href="#"><img alt="" src="/Assest/2.png"></a>
    </div>
    <div class="span2">
      <a href="#"><img alt="" src="/Assest/3.png"></a>
    </div>
    <div class="span2">
      <a href="#"><img alt="" src="/Assest/4.png"></a>
    </div>
  </div>
</section>

<div class="popupBg">
  <div class="popup">
    <img src="/Assest/Teams.png" />
    <a class="popup_closeBtn" href="javascript:">X</a>
  </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
  <script>
    $(document).ready(function () {
      //載入網頁後的3秒開啟
      setTimeout(function () {
        $('.popupBg').fadeIn(1500);
      }, 3000);

      //手動關閉
      $('.popupBg').click(function () {
        $('.popupBg').fadeOut(1000);
      })

    });
  </script>
}